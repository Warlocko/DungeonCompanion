<main role="main" class="container">
  <div class="starter-template">

    <div class="card mb-3 module">
          <img src="{{event.img_url}}" class="card-img-top" alt="...">
          <div class="card-body" style="margin-bottom: 1rem;">
            <h4 class="card-title text-module"><b>{{event.name}}</b></h4>
            <p class="card-text text-module">{{event.description}}</p>
            <a href="/app/campaign/{{cmpid}}/event/{{event.id}}/create-form" class="card-link text-module"><i>¿Qué harán nuestros heroés?</i></a>
            <a href="/app/campaign/{{cmpid}}" class="card-link text-module"><i>¿Nos habrán abandonado?</i></a>
          </div>
    </div>
    <br>
    <h3 class="sectionTitle"><b>Respuestas</b></h3>
    {{#each responses}}
      <div class="card module">
        <div class="card-body text-module">
          <h3><b>{{adventurer_name}}</b></h3>
          <br>
          <blockquote class="blockquote mb-0">
            <p class="response-text">-{{description}}</p>
          </blockquote>
        </div>
      </div>
      <br>
    {{/each}}

  </div>
</main>

<style type="text/css">
  .sectionTitle{
    margin-left: 0;
    margin-bottom: 20px;
  }
  .response-text{
    margin-bottom: 0;
  }
  h3{
    margin-bottom: 0;
  }
</style>

<div class="campaign-container">
  <form class="form-signin" method="POST" action="/app/campaign/{{cmpid}}/event/{{evid}}/send">
    <div class="text-center mb-4">
      <h1 class="h3 mb-3 font-weight-normal dungeon-tittle"><b>Un Aventurero Responde</b></h1>
    </div>

    <div class="form-label-group campaign-form">
      <select id="role" name="role" class="form-control">
        <option disabled selected value="0">El Aventurero</option>
        <option value="{{id}}">Example Adventurer</option>
        {{#each adv}}
        <option value="{{id}}">{{name}}</option>
        {{/each}}
      </select>
    </div>
    <br>
    <div class="form-label-group campaign-form">
      <input type="text" name="description" id="inputDesc" row = "5" class="form-control" placeholder="AcciÃ³n del aventurero">
      <label for="inputDesc">Describe que realiza el aventurero</label>
    </div>
    <div class="form-label-group campaign-form">
      <select id="role" name="role" class="form-control">
        <option disabled selected value="0">Equipado con</option>
        <option value="{{id}}">Example Item</option>
        {{#each item}}
        <option value="{{id}}">{{name}}</option>
        {{/each}}
      </select>
    </div>
    <br>

    <button class="btn btn-lg btn-primary btn-block camp-btn confirm-btn" type="submit">Crear</button>
  </form>
</div>

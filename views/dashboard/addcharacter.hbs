<div class="campaign-container">
    <form class="form-signin" method="POST">
        <div class="text-center mb-4">
            <h1 class="h3 mb-3 font-weight-normal dungeon-tittle"><b>Un nuevo aventurero se ha de unir...</b></h1>
        </div>

        <div class="form-label-group campaign-form">
            <input type="text" name="adv_name" id="inputName" class="form-control" placeholder="Gorlosh">
            <label for="inputName">Nombre del aventurero</label>
        </div>

        <div class="form-label-group campaign-form">
            <input type="text" name="adv_race" id="inputName" class="form-control" placeholder="Medio-Orco">
            <label for="inputName">Raza</label>
        </div>

        <div class="form-label-group campaign-form">
            <input type="text" name="adv_class" id="inputName" class="form-control" placeholder="Bárbaro">
            <label for="inputName">Clase</label>
        </div>

        <div class="form-label-group campaign-form">
            <select id="player" name="player" class="form-control">
                <option disabled selected value="PC">Jugador propietario</option>
                <option value="DM">Director de Juego</option>
                <option value="PC">Aventurero</option>
            </select>
            <label for="inputName">Jugador propietario del aventurero</label>
        </div>

        <br>
        <button class="btn btn-lg btn-primary btn-block camp-btn confirm-btn" type="submit">Añadir aventurero</button>
    </form>

</div>
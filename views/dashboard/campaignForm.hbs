<div class="campaign-container">
  <form class="form-signin" method="POST" action="create-campaign">
    <div class="text-center mb-4">
      <h1 class="h3 mb-3 font-weight-normal dungeon-tittle"><b>Hora de crear tu aventura...</b></h1>
    </div>

    <div class="form-label-group campaign-form">
      <input type="text" name="name" id="inputDesc" class="form-control" placeholder="Name">
      <label for="inputName">Nombre de Campaña</label>
    </div>

    <div class="form-label-group campaign-form">
      <input type="text" name="description" id="inputDesc" row = "5" class="form-control" placeholder="Description">
      <label for="inputDesc">Descripción de Campaña</label>
    </div>

    <div class="input-group campaign-form">
      <div class="input-group-prepend">
        <span class="input-group-text" id="inputCmpMap">Escoger un mapa</span>
      </div>
      <div class="custom-file">
        <input type="file" class="custom-file-input" id="inputMap">
        <label class="custom-file-label" for="inputMap">Buscar archivo</label>
      </div>
    </div>

    <br>
    <button class="btn btn-lg btn-primary btn-block camp-btn confirm-btn" type="submit">Crear</button>
  </form>
</div>

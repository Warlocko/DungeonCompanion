<div class="campaign-container">
  <form class="form-signin" method="POST" action="/app/dashboard/crevent">
    <div class="text-center mb-4">
      <h1 class="h3 mb-3 font-weight-normal dungeon-tittle"><b>¡Un Suceso Ocurre!</b></h1>
    </div>

    <div class="form-label-group campaign-form">
      <input type="text" name="name" id="inputName" class="form-control" placeholder="Evento">
      <label for="inputName">Título del Evento</label>
    </div>

    <div class="form-label-group campaign-form">
      <input type="text" name="description" id="inputDesc" row = "5" class="form-control" placeholder="Un evento ha sucedido...">
      <label for="inputDesc">Descripción del Evento</label>
    </div>

    <div class="input-group campaign-form">
      <div class="input-group-prepend">
        <span class="input-group-text" id="inputImg">Sube Imagen de Evento</span>
      </div>
      <div class="custom-file">
        <input type="file" class="custom-file-input" id="inputImg">
        <label class="custom-file-label" for="inputImg">Buscar archivo</label>
      </div>
    </div>

    <br>
    <button class="btn btn-lg btn-primary btn-block camp-btn confirm-btn" type="submit">Crear</button>
  </form>
</div>
